<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:selectableItemBackground"
    android:padding="4dp">

    <!-- Header: Anklickbar zum Expandieren -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/lektionTitle"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Lektionstitel"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lektionLangs"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="DE → EN"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingEnd="8dp"/>

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="Lektion starten"
            android:background="@null"/>
    </LinearLayout>

    <!-- Expandierbarer Body -->
    <LinearLayout
        android:id="@+id/bodyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#10CCCCCC"
        android:padding="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vocabRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <Button
            android:id="@+id/deleteLektionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lektion löschen"
            android:layout_gravity="end"
            android:backgroundTint="@color/red"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/addVocabButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neue Vokabel"
            android:layout_gravity="end"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</LinearLayout>
