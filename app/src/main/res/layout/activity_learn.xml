<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <!-- Top bar with navigation buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:padding="24dp">

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/midnight_green"
            android:contentDescription="Home"
            android:src="@android:drawable/ic_menu_revert"
            android:visibility="visible" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/listBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/midnight_green"
            android:contentDescription="Vocabulary List"
            android:src="@android:drawable/ic_menu_sort_by_size" />
    </LinearLayout>

    <!-- Fragment container - will hold all the swappable fragments -->

    <!-- Overlay fÃ¼r die Vocab List -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"/>

    <LinearLayout
        android:id="@+id/vocabListOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Vocabulary List"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/vocabListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>
